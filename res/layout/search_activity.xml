<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/library_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95dip"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/search.edit"
            android:layout_width="200dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="8pt" />

        <FrameLayout
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/search.cls"
                android:layout_width="62dip"
                android:layout_height="62dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="13dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/search_button_bg" >
            </Button>

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/search.pro"
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:layout_gravity="left"
            android:layout_marginLeft="15dip"
            android:background="@drawable/pronouce_bg" />

        <Button
            android:id="@+id/search.addToNewWords"
            android:layout_width="62dip"
            android:layout_height="62dip"
            android:layout_gravity="right"
            android:layout_marginLeft="150dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/add_button" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search.textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dip"
            android:maxLines="150"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>